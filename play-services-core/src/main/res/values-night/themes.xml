<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight">
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="colorBackgroundFloating">@color/theme_foreground_dark</item>
        <item name="android:colorBackground">@color/theme_background_dark</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme.Base">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.LoginBlue" parent="Theme.LoginBlue.Base" />

    <style name="Theme.LoginBlue.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_accent_light</item>
        <item name="colorPrimaryDark">@color/theme_accent_light</item>
        <item name="android:colorBackground">@color/theme_background_dark</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>
